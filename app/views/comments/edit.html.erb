
<div class ="max-w-4xl mx-auto px-4 py-8">

<h2 class="text-2xl font-semibold text-gray-800 mb-6">Edit Comment</h2>

<%= form_with model: [@article, @comment] do |form| %>
  <div class="mb-4">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.select :status, Visible::VALID_STATUSES, {},  class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :commenter, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_field :commenter,  class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

    <div class="mb-4">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_area :body, class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Update Comment", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
  </div>
<% end %>

</div>
