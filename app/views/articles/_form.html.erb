

<div class ="max-w-4xl mx-auto px-4 py-8">

<%= form_with model: article do |form| %>

  <div class="mb-4">
    <%= form.label :status, class: "block text-sm font-medium text-gray-700" %><br>
    <%= form.select :status, Visible:: VALID_STATUSES, selected: 
    article.status || 'public', class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <p class="mt-1 text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :body,class: "block text-sm font-medium text-gray-700 mb-1" %><br>
    <%= form.text_area :body, class: "w-full border border-gray-300 rounded px-3 py-2 shadow-sm resize-none focus:outline-none focus:ring-2 focus:ring-blue-500" %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <p class="mt-1 text-sm text-red-600"><%= message %></p>
    <% end %>
  </div>


  <div>
    <%= form.submit "Update Article", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition cursor-pointer" %>
  </div>

  <% end %>


</div>

